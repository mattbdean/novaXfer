doctype html
html(ng-app='novaxfer')
    head
        // These 3 <meta> headers must come first
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        block title
            title novaXfer

        block stylesheets
            link(rel='stylesheet', href='/style/base.css')

        block scripts
            script(src='/bower_components/lodash/dist/lodash.min.js')
            script(src='/bower_components/jquery/dist/jquery.min.js')
            script(src='/bower_components/tether/dist/js/tether.js')
            script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
            script(src='/bower_components/angular/angular.js')
            script(src='/app.module.js')
            script(src='/core/core.module.js')
            script(src='/core/equivalency/equivalency.filter.js')
            script(src='/course-table/course-table.module.js')
            script(src='/course-table/course-table.component.js')
            script(src='/single-course-lookup/scl.module.js')
            script(src='/single-course-lookup/scl.component.js')


    body
        block header
            header: a.text-center(href='/') novaXfer

        main
            block content

        block footer
            footer
              div.container
                span.text-muted
