div.container-fluid#big-question
    div
        | Will
        input(ng-model='$ctrl.course', size='3', course-validator)
        | transfer to
        select(
            ng-model='$ctrl.institution'
            ng-options='inst.acronym as inst.acronym for inst in $ctrl.availableInstitutions'
        )
        |?
    button#find-equivalencies.btn.btn-default(ng-click='$ctrl.requestEquiv()') Find

div.container
    div.equivalency-block(ng-repeat="equivalency in $ctrl.result.equivalencies")
        h2 Option {{$index + 1}}
        div.course-set-block
            p(ng-repeat="input in equivalency.input") {{input.subject}} {{input.number}} ({{input.credits}} credits)
        span.glyphicon.glyphicon-arrow-down
        div.course-set-block
            p(ng-repeat="output in equivalency.output") {{output.subject}} {{output.number}} ({{output.credits}} credits)
    p.text-danger(ng-show="$ctrl.error") {{$ctrl.error}}
